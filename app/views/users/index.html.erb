<h1 class="text-center mt-4">All Alpha Bloggers</h1>
<div class="container">
	<div class="d-flex justify-content-center mt-5">
		<%= will_paginate %>
	</div>
</div>
<div align="center">
	<% @users.each do |user|%>
		<ul class="listing">
			<div class="row justify-content-md-center">
				<div class="card col-md-4 col-md-offset-4">
					<div class="card-body">
						<li><%= link_to gravatar_for(user), user_path(user) %></li>
						<li class="card-title">
							<%= link_to user.username, user_path(user) %>
							<div>
								<small>
									<%= pluralize(user.articles.count, "article") if user.articles %>
								</small>
							</div>
						</li>
						<% if logged_in? and current_user.admin? %>
							<li>
								<%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all their articles?", title: 'Confirm Deletion' }, class: "btn btn-outline-danger" %>
							</li>
						<% end %>
					</div>
				</div>
			</div>
		</ul>
	<% end %>
</div>
<div class="container">
	<div class="d-flex justify-content-center mt-5">
		<%= will_paginate %>
	</div>
</div>

